<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:padding="10dp"
    android:background="@color/light_blue_gray"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clOrderSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="30dp"
        android:paddingTop="10dp"
        android:elevation="5dp"
        android:layout_marginHorizontal="4dp"
        android:layout_marginVertical="5dp"
        android:background="@drawable/order_summary_bg"
        app:layout_constraintBottom_toTopOf="@id/rvOrderList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/tvOrderSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_order_summary"
            android:text="@string/order_summary"
            android:textStyle="bold|italic"
            android:textSize="25sp" />

        <View
            android:id="@+id/view_order_summary"
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvOrderSummary"
            app:layout_constraintBottom_toTopOf="@id/tvOrderDeliveryCount"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/black"/>

        <TextView
            android:id="@+id/tvOrderDeliveryCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:textSize="18sp"
            android:text="@string/delivery_count_4_6"
            app:layout_constraintBottom_toTopOf="@+id/tvOrderCashCollected"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view_order_summary" />

        <TextView
            android:id="@+id/tvOrderCashCollected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="5dp"
            android:textSize="18sp"
            android:text="@string/cash_collected_100"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvOrderDeliveryCount" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvSortList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/clOrderSummary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rvOrderList"
        android:text="@string/sort_list"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/tvFilterList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/clOrderSummary"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rvOrderList"
        android:text="@string/filter_list"
        android:textSize="18sp"
        android:textColor="@color/black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvOrderList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="25dp"
        tools:listitem="@layout/itemrow_order_data_list"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSortList" />


</androidx.constraintlayout.widget.ConstraintLayout>